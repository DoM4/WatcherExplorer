<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RepoStyleTitle" parent="TextViewStyleDefault">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RepoStyleDescription" parent="TextViewStyleDefault">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewStyleDetails" parent="TextViewStyleDefault">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="TextViewStyleDefault">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
